disp('Cell Splitting');
b1 = input('Enter the number of base stations: ');
n1 = input('Enter the number of channels per base station: ');
t1 = b1 * n1;
disp('Total number of channels before cell splitting:');
disp(t1);
m1 = input('Enter the number of microcells: ');
b2 = b1 + m1;
disp('Number of base stations after cell splitting:');
disp(b2);
t2 = b2 * n1;
disp('Total number of channels after cell splitting:');
disp(t2);
disp('Cell Sectoring');
c1 = input('Enter the number of traffic channels per cell: ');
call1 = input('Enter the number of calls/hour for the unsectored system: ');
c2 = c1 / 3;
call2 = input('Enter the number of calls/hour for the 120-degree system: ');
ns1 = input('Enter the number of sectors for 120 degrees: ');
capacity = ns1 * call2;
dif = call1 - capacity;
percentdif = (dif / call1) * 100;
disp('Cell capacity of the unsectored system:');
disp(call1);
disp('Cell capacity of the 120-degree sector system:');
disp(capacity);
disp('Decrease in cell capacity (%):');
disp(percentdif);
